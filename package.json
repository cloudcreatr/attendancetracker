    "@remix-run/cloudflare-pages": "^2.10.0",
    "@remix-run/react": "^2.10.0",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "date-fns": "^3.6.0",
    "drizzle-orm": "^0.31.2",
